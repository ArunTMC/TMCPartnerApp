<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"

    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@color/TMC_Primary_Text_Color"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/NameOfDeliveryPartner" />

            <TextView
                android:id="@+id/deliveryPartner_name_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.7"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:textColor="@color/TMC_Primary_Text_Color"

                android:fontFamily="@font/open_sans_bold"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_marginTop="10dp"

                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:text="@string/Mobile_text" />

                    <TextView
                        android:id="@+id/deliveryPartner_mobileNo_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:fontFamily="@font/open_sans_semibold"
                        android:text="" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_marginStart="5dp"

                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:text="@string/Status" />
                    <TextView
                        android:id="@+id/deliveryPartner_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/TMC_Primary_Text_Color"

                        android:fontFamily="@font/open_sans_semibold"
                        android:text="TextView" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_weight="3.2"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center_vertical|bottom"
                android:id="@+id/new_Order_Linearlayout"
                >


                <Button
                    android:id="@+id/assignPartner_widget"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/TMC_White"
                    android:background="@drawable/button_background"
                    android:text="@string/AssignPartner" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>