<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_item_list_parentLayout"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Primary_Text_Color"
            android:textSize="25sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_weight="1.1"

            android:text="OrderDetails" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TMC_Orange"
            android:textSize="22sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_weight="1.1"
            android:gravity="right"
            android:text="Wed, 23 Jan 2021 17:46:39" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardLayout"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:layout_weight="3"

            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/slotName_text_widget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="PREORDER"

                    android:textColor="@color/TMC_Orange"
                    android:textSize="22sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text=" -  Thu, 28 Jan 2021 (07:30 - 08:30)"

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="TokenNo : "

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight=".5"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="35"

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="#OrderId : "

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="35"

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text="Time : "

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1.8"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:text=" Thu, 28 Jan 2021 13:40:59 "

                    android:textColor="@color/TMC_Primary_Text_Color"
                    android:textSize="22sp" />


            </LinearLayout>
            <TextView
                android:id="@+id/orderDetails_text_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:textColor="@color/TMC_Orange"
                android:fontFamily="@font/open_sans_semibold"
                android:text="ItemName,ItemName," />
        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="3">


                <LinearLayout
                    android:id="@+id/new_Order_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <Button
                        android:id="@+id/accept_Order_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Confirm_Order_text"
                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/cancel_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/cancel_Order_text"

                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirming_order_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <Button
                        android:id="@+id/ready_for_pickup_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Ready_For_Pickup_text"

                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/pending_order_print_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Print_text"

                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ready_Order_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/other_print_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/Print_text"

                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancelled_Order_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/cancelled_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"

                        android:text="@string/cancelled_Order_text"
                        android:textAllCaps="false"
                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/cancelled_print_button_widget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_background"
                        android:fontFamily="@font/open_sans_bold"
                        android:textAllCaps="false"

                        android:textColor="@color/TMC_White"
                        android:textSize="20sp" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

