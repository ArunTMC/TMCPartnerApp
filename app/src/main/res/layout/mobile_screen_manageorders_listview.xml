<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/mobileScreen_order_item_list_parentLayout"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:id="@+id/mobileScreen_cardLayout"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:id="@+id/mobileScreen_orderDetailsLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:layout_weight="1.1"

                        android:text="OrderDetails" />

                    <TextView
                        android:id="@+id/mobileScreen_ordertype_text_widget"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:textAllCaps="true"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="3"

                        android:textColor="@color/TMC_Orange"
                        android:textSize="13sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobileScreen_tokenNo_label_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/Token_No_text"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/mobileScreen_tokenNo_text_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:text="3"

                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobileScreen_mobileNo_label_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/Mobile_text" />

                    <TextView
                        android:id="@+id/mobileScreen_moblieNo_text_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:paddingStart="35dp"
                        android:fontFamily="@font/open_sans"
                        android:text="rr" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/mobileScreen_orderDetails_text_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/TMC_Primary_Text_Color"
                        android:fontFamily="@font/open_sans"
                        android:text="TextView" />
                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="3">






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:id="@+id/mobileScreen_new_Order_Linearlayout"
                        >


                        <Button
                            android:id="@+id/mobileScreen_accept_Order_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textColor="@color/TMC_White"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/button_background"
                            android:text="@string/Confirm_Order_text"
                            />
                        <Button
                            android:id="@+id/mobileScreen_acceptorder_cancel_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"                            android:text="@string/cancel_Order_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:id="@+id/mobileScreen_confirming_order_Linearlayout"
                        >


                        <Button
                            android:id="@+id/mobileScreen_ready_for_pickup_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"
                            android:text="@string/Ready_For_Pickup_text"/>


                        <Button
                            android:id="@+id/mobileScreen_pending_order_print_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"
                            android:text="@string/Print_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:id="@+id/mobileScreen_ready_Order_Linearlayout"
                        >

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/mobileScreen_other_print_button_widget"
                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"
                            android:text="@string/Print_text" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:id="@+id/mobileScreen_cancelled_Order_Linearlayout"
                        >

                        <Button
                            android:id="@+id/mobileScreen_cancelled_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:fontFamily="@font/open_sans_bold"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"
                            android:text="@string/cancelled_Order_text"
                            android:textAllCaps="false" />


                        <Button
                            android:id="@+id/mobileScreen_cancelled_print_button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:fontFamily="@font/open_sans_bold"
                            android:textAllCaps="false"
                            android:textSize="15sp"

                            android:textColor="@color/TMC_White"
                            android:background="@drawable/button_background"  />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>

